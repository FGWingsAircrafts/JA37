<?xml version="1.0"?>

<PropertyList>

 	<path>switch.ac</path>

	<animation>
	    <type>pick</type>
	    <object-name>Switch</object-name>
	    <object-name>Base</object-name>
	    <action>
	        <button>0</button>
	        <binding>
	            <command>property-toggle</command>
	            <property>controls/electric/lights-ext-switch</property>
	        </binding>
	        <binding>
		        <command>nasal</command>
		        <script>ja37.click();</script>
      		</binding>
	    </action>
	    <hovered>
	        <binding>
	         	<command>set-tooltip</command>
	         	<tooltip-id>switch-lights-ext</tooltip-id>
	         	<label>Exterior lights</label>
	         	<property>controls/electric/lights-ext-switch</property>
	        </binding>
	    </hovered>
	</animation>
 
	<animation>
		<type>rotate</type>
		<object-name>Switch</object-name>
		<property>controls/electric/lights-ext-switch</property>
		<factor>70</factor>
		<offset-deg>-35</offset-deg>
		<center>
			<x-m> 0.0121 </x-m>
			<y-m> 0.0 </y-m>
			<z-m> 0.0 </z-m>
		</center>
		<axis>
			<x> 0.0 </x>
			<y> 0.0 </y>
			<z>-1.0 </z>
		</axis>
	 </animation>

	<animation>
	  <type>material</type>
	   <object-name>Text</object-name>
	   <property-base>sim/ja37/texture</property-base>
	   <texture-prop>switch-light-ext</texture-prop>
	   <texture>switch-lights-exterior.png</texture>
	 </animation>

	<animation>
	  	<type>material</type> 
		<object-name>Base</object-name>
		<object-name>Text</object-name>
  		<emission>  
			<red-prop>instrumentation/instrumentation-light/r</red-prop> 
			<green-prop>instrumentation/instrumentation-light/g</green-prop> 
			<blue-prop>instrumentation/instrumentation-light/b</blue-prop>
   			<factor-prop>controls/lighting/instruments-norm</factor-prop>
  		</emission>
 	</animation>
</PropertyList>
