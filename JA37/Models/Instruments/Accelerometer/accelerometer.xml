<?xml version="1.0"?>


<PropertyList>

  <path>accelerometer.ac</path>

<animation>
  <type>pick</type> 
  <object-name>needle</object-name>
  <object-name>face</object-name>
  <object-name>Gauge</object-name>
  <object-name>Cylinder</object-name>
  <hovered>
       <binding>
         <command>set-tooltip</command>
         <tooltip-id>accelerometer</tooltip-id>
         <label>Pulling %2.1fG</label>
         <property>sim/ja37/accelerations/pilot-G</property>
      </binding>
   </hovered>
 </animation>

  <animation>
    <type>rotate</type>
    <object-name>needle</object-name>
    <condition>
      <greater-than>
        <property>systems/electrical/outputs/ac-instr-voltage</property>
        <value>100</value>
      </greater-than>
    </condition>
    <property>sim/ja37/accelerations/pilot-G</property>
    <interpolation>
      <entry><ind>-2</ind><dep>45</dep></entry>
      <entry><ind>-1</ind><dep>67.5</dep></entry>
      <entry><ind>0</ind><dep>90</dep></entry>
      <entry><ind>1</ind><dep>112.5</dep></entry>
      <entry><ind>3</ind><dep>157.5</dep></entry>
      <entry><ind>5</ind><dep>202.5</dep></entry>
      <entry><ind>7</ind><dep>247.5</dep></entry>
      <entry><ind>9</ind><dep>292.5</dep></entry>
    </interpolation>
    <center>
      <x-m>0</x-m>
      <y-m>0</y-m>
      <z-m>0</z-m>
    </center> 
    <axis>
      <x>-1</x>
      <y>0</y>
      <z>0</z>
    </axis>
  </animation>
